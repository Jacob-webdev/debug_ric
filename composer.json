    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "vlucas/phpdotenv": "^5.6",
        "paragonie/random_compat": "^2.0",
        "phpmailer/phpmailer": "^6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
